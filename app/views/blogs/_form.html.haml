= form_for @blog do |f|
  - if @blog.errors.any?
    #error_explanation
      %h2= "#{pluralize(@blog.errors.count, "error")} prohibited this blog from being saved:"
      %ul
        - @blog.errors.full_messages.each do |message|
          %li= message
  .form-group.input-group-lg
    = f.text_field :title,class: 'form-control input-lg',placeholder: 'title'
  .form-group.input-group-lg
    = f.text_area :description,class: 'form-control',placeholder: 'content',rows: '10',cols: '80'
  .actions
    = f.submit 'Save' ,class: 'btn btn-primary'
