%section#contact.padd-section.wow.fadeInUp
  .container
    .section-title.text-center
      %h2 Contact
      %p.separator Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque
  .container
    .row.justify-content-center
      .col-lg-3.col-md-4
        .info
          %div
            %i.fa.fa-map-marker
            %p
              A108 Adam Street
              %br>/
              New York, NY 535022
          .email
            %i.fa.fa-envelope
            %p info@example.com
          %div
            %i.fa.fa-phone
            %p +1 5589 55488 55s
        .social-links
          %a.twitter{:href => "#"}
            %i.fa.fa-twitter
          %a.facebook{:href => "#"}
            %i.fa.fa-facebook
          %a.instagram{:href => "#"}
            %i.fa.fa-instagram
          %a.google-plus{:href => "#"}
            %i.fa.fa-google-plus
          %a.linkedin{:href => "#"}
            %i.fa.fa-linkedin
      .col-lg-5.col-md-8
        .form
          #sendmessage Your message has been sent. Thank you!
          #errormessage
          %form.contactForm{:action => "", :method => "post", :role => "form"}
            .form-group
              %input#name.form-control{"data-msg" => "Please enter at least 4 chars", "data-rule" => "minlen:4", :name => "name", :placeholder => "Your Name", :type => "text"}/
              .validation
            .form-group
              %input#email.form-control{"data-msg" => "Please enter a valid email", "data-rule" => "email", :name => "email", :placeholder => "Your Email", :type => "email"}/
              .validation
            .form-group
              %input#subject.form-control{"data-msg" => "Please enter at least 8 chars of subject", "data-rule" => "minlen:4", :name => "subject", :placeholder => "Subject", :type => "text"}/
              .validation
            .form-group
              %textarea.form-control{"data-msg" => "Please write something for us", "data-rule" => "required", :name => "message", :placeholder => "Message", :rows => "5"}
              .validation
            .text-center
              %button{:type => "submit"} Send Message

