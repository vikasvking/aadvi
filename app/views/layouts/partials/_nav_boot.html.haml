%nav.navbar.navbar-default{style: 'margin-bottom: 0 !important;background-color:#2a2c30'}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %span.navbar-brand
        = link_to root_path do
          %span.navspan{style: 'color:#fff'} Aadvi
          %span.navspan{style: 'color:#71c55d'}Technologies
      
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        
        
      
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to 'blog',blogs_path
        - if user_signed_in?
          %li
            = link_to current_user.email
          %li
            = link_to 'Logout',destroy_user_session_path,method: :delete,class: 'nostyle'
        - else
          %li
            = link_to 'Log in',new_user_session_path
          %li
            = link_to 'Sign in',new_user_registration_path
    / /.navbar-collapse
  / /.container-fluid
